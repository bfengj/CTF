extends layout

block content
  .container
    .row.justify-content-center
      .col-md-8.col-lg-6.mt-5
        .card
          .card-header Login
          .card-body
          form(action='/login' method='POST')
            input(type='hidden', name='_csrf', value=csrfToken)
            .form-group.row
              label.col-md-4.col-form-label.text-md-right(for='username') Username
              .col-md-6
                input#username.form-control(type='text' name='username' required='' autofocus='')
            .form-group.row
              label.col-md-4.col-form-label.text-md-right(for='password') Password
              .col-md-6
                input#password.form-control(type='password' name='password' required='')
            if error
              .alert.alert-danger.mx-5(role='alert') #{error}
            .row.justify-content-center
              .col-md-3
                button.btn.btn-primary.btn-block(id='submit' type='submit') Login
            a.btn.btn-link.col-12(href='/register') Not registered? Sign up!